generator client {
  provider               = "prisma-client-js"
  output                 = "../generated"
  generatedFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          Int         @id @default(autoincrement())
  name        String
  timeEntries TimeEntry[]
}

model TimeEntry {
  id          Int      @id @default(autoincrement())
  startTime   DateTime
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   Int
  hours       Decimal  @db.Decimal(5, 2)
  description String
}
